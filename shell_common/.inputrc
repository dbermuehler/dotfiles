set completion-ignore-case on
set match-hidden-files off
set mark-symlinked-directories on
# if there are more than one completion match they will be listed immediately (no need to double <TAB>)
set show-all-if-ambiguous on
# if completion is performed in the middle of line do not insert the already existing part of the line
set skip-completed-text on
set blink-matching-paren on

# activate vi mode
set editing-mode vi
set keymap vi-insert
# map ctrl-l to clear screen so that it will work in vi mode
Control-l: clear-screen

# the following options are only avaliable for bash 4.3 and readline 6.3

# show colors in the completion preview
set colored-stats on
# show an indicator at the beginning of the prompt in which (vi) mode we are
# deactivated for now because of a bash bug
#set show-mode-in-prompt on
#set vi-ins-mode-string \2+\2
#set vi-cmd-mode-string \2-\2
# wait 100 ms after the escape key has been pressed
set keyseq-timeout 100

"\e[A": history-search-backward
"\e[B": history-search-forward
